.widget {
	margin: 0 0 1.5em;

	/* Make sure select elements fit in widgets. */
	select {
		max-width: 100%;
	}
}

/* Search widget. */
.widget_search .search-submit {
	display: none;
}


/* Contador de obras */
.contador-obra{
	@include borde-degrade();
}
.contador-obra-titulo{
	margin: 0px;
	background: $color__gray-light;
	text-align: center;
	padding: 10px 5px;
	text-transform: uppercase;
	color: $color__primary;
	font-size: 1rem;
	font-weight: normal;
}
.contador-obra-numero{
	display: block;
	color: $color__primary;
	font-size: 5rem;
	text-align: center;
}